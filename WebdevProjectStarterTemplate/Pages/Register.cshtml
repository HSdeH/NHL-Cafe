@page
@model registerModel

<form>
    <div class="form-group">
        <label>Naam</label>
        <input asp-for="@Model.user.UserName" class="form-control" placeholder="Gebruikersnaam" />
        <span class="invalid-feedback" asp-validation-for="@Model.user.UserName"></span>
    </div>
    <div class="form-group">
        <label>Wachtwoord</label>
        <input asp-for="@Model.user.Password" class="form-control" placeholder="Wachtwoord" />
        <span class="invalid-feedback" asp-validation-for="@Model.user.Password"></span>
    </div>
    <div class="form-group">
        <label>Herhaal wachtwoord</label>
        <input class="form-control" placeholder="Herhaal wachtwoord" />
        <span class="invalid-feedback" asp-validation-for="@Model.user.UserName"></span>
    </div>
    <div class="form-group">
        <label>eMail</label>
        <input class="form-control" placeholder="email@email.com" asp-for="@Model.user.Email"/>
        <span class="invalid-feedback" asp-validation-for="@Model.user.Email"></span>
    </div>


</form>